<NewTableScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        canvas.before:
            Color:
                rgba: rgba('#f6f8fa')
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: '75dp'
            pos_hint: {'top': 1, 'left': 1}
            canvas.before:
                Color:
                    rgba: rgba('#262626')
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                background_normal: 'assets/images/go_back_btn_normal.png'
                background_down: 'assets/images/go_back_btn_down.png'
                size_hint: (None, None)
                size: ('75dp', '75dp')
                on_release:
                    app.root.current = 'selection_screen'
                    root.manager.transition.direction = 'right'
            CLabel:
                pos_hint: {'center_y': 0.5}
                font_size: '18sp'
                bold: True
                color: rgba('#ffffff')
                text: ' Criar nova base de dados'
        FloatLayout:
            size_hint: (1, 1)
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1, None)
                height: self.minimum_size[1]
                pos_hint: {'top': 0.9, 'center_x': 0.5}
                spacing: '40dp'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (0.9, None)
                    height: self.minimum_size[1]
                    pos_hint: {'center_x': 0.5}
                    spacing: '15dp'
                    CWLabel:
                        text: 'Regras para nomeação de base de dados:'
                        bold: True
                    CWLabel:
                        text: '1. Deve conter apenas letras de A-Z/a-z ou números de 0 a 9.'
                    CWLabel:
                        text: '2. Não deve começar com números.'
                    CWLabel:
                        text: '3. O nome deverá ter pelo menos 4 caracteres.'
                    CWLabel:
                        text: '4. O nome deverá ter no máximo 32 caracteres.'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (0.9, None)
                    height: self.minimum_size[1]
                    pos_hint: {'center_x': 0.5}
                    spacing: '5dp'
                    CTextInput:
                        id: table_name
                        size_hint: (1, None)
                        height: '40dp'
                        hint_text: 'Digite aqui o nome da base de dados'
                    CLabel:
                        id: total_characters
                        text: '0/32'
        CButton:
            size_hint: (1, None)
            height: '60dp'
            text: 'CONFIRMAR'
            on_release:
                root.create_table()
