<EntriesScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        canvas.before:
            Color:
                rgba: rgba('#f6f8fa')
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: '75dp'
            canvas.before:
                Color:
                    rgba: rgba('#262626')
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                background_normal: 'assets/images/go_back_btn_normal.png'
                background_down: 'assets/images/go_back_btn_down.png'
                size_hint: (None, None)
                size: ('75dp', '75dp')
                on_release:
                    app.root.current = 'selection_screen'
                    root.manager.transition.direction = 'right'
            CLabel:
                pos_hint: {'center_y': 0.5}
                font_size: '18sp'
                bold: True
                color: rgba('#ffffff')
                text: ' Entradas'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (None, None)
            size: self.minimum_size
            padding: ['15dp', '30dp', '15dp', '30dp']
            CLabel:
                id: table_name
                font_size: '18sp'
                bold: True
            CLabel:
                font_size: '12sp'
                color: (0, 0, 0, 0.5)
                text: 'ID / NOME / NASCIMENTO / SEXO / PESO / ALTURA / IMC'
        Separator:
            height: '2dp'
        ScrollView:
            effect_cls: ScrollEffect
            size_hint: (1, 1)
            do_scroll_x: False
            BoxLayout:
                id: options
                size_hint: (1, None)
                height: self.minimum_size[1]
                orientation: 'vertical'
